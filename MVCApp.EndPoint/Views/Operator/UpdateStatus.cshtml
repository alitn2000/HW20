@using App.Domain.Core.TurnsManager.TechExamAggrigate.Entity
@model List<TechExam>

<div class="container mt-4">
    <h2 class="text-center mb-4">Tech Exam List</h2>
    <table class="table table-striped table-bordered table-hover text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">National Id</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Address</th>
                <th scope="col">Company Name</th>
                <th scope="col">Car Model</th>
                <th scope="col">Plate Number</th>
                <th scope="col">Production Date</th>
                <th scope="col">TechExam Date</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.NationalId</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Address</td>
                        <td>@item.CompanyName.ToString()</td>
                        <td>@item.CarName</td>
                        <td>@item.PlateNumber</td>
                        <td>@item.CarAge.ToString("yyyy-MM-dd")</td>
                        <td>@item.TechExamDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.Status.ToString()</td>
                        <td>
                            <form method="post" asp-action="UpdateStatus" asp-controller="Operator">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" name="action" value="Accept" class="btn btn-success btn-sm">Accept</button>
                                <button type="submit" name="action" value="Reject" class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="11" class="text-center text-danger">No Tech Exams Available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>